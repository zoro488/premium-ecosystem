#  Premium Ecosystem - Production Dockerfile
# Multi-stage build optimizado para producci贸n

# Etapa 1: Builder
FROM node:20-alpine AS builder

WORKDIR /app

# Copiar archivos de configuraci贸n
COPY package*.json ./
COPY vite.config.js ./
COPY tailwind.config.js ./
COPY postcss.config.js ./

# Instalar dependencias (solo production)
RUN npm ci --only=production --prefer-offline --no-audit

# Copiar c贸digo fuente
COPY . .

# Build para producci贸n
RUN npm run build

# Etapa 2: Production (servidor est谩tico con Nginx)
FROM nginx:alpine AS production

# Copiar archivos construidos
COPY --from=builder /app/dist /usr/share/nginx/html

# Copiar configuraci贸n personalizada de Nginx
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# Exponer puerto 80
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

# Etiquetas de metadata
LABEL maintainer="Premium Ecosystem Team"
LABEL version="1.0.0"
LABEL description="Premium Ecosystem - Enterprise Applications Suite"

CMD ["nginx", "-g", "daemon off;"]
