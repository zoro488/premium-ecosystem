rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas en modo de prueba - Cualquiera puede leer/escribir por 30 días
    // CAMBIAR EN PRODUCCIÓN
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 2, 18);
    }

    // Reglas seguras para producción (descomenta cuando tengas auth)
    /*
