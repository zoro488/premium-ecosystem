{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "ğŸŒ Chrome: Launch & Debug",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      },
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
      "runtimeArgs": [
        "--disable-web-security",
        "--disable-features=IsolateOrigins,site-per-process"
      ]
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "ğŸ”— Chrome: Attach to Instance",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "port": 9222
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "ğŸŒ Edge: Launch & Debug",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*"
      },
      "userDataDir": "${workspaceFolder}/.vscode/edge-debug-profile"
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "ğŸ¦Š Firefox: Launch & Debug",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "pathMappings": [
        {
          "url": "webpack:///src/",
          "path": "${workspaceFolder}/src"
        }
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸš€ Vite: Start Dev Server",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "serverReadyAction": {
        "pattern": "Local:.*http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ§ª Vitest: Debug Current File",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        "${file}",
        "--reporter=verbose"
      ],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ§ª Vitest: Debug All Tests",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run", "--reporter=verbose"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ§ª Vitest: Watch Mode",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["--watch"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ“Š Vitest: Debug with Coverage",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        "--coverage",
        "--reporter=verbose"
      ],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ­ Playwright: Debug Current Test",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": [
        "test",
        "${file}",
        "--debug"
      ],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ­ Playwright: Debug All E2E Tests",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "--debug"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ­ Playwright: Headed Mode",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": [
        "test",
        "--headed",
        "--project=chromium"
      ],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ”¥ Firebase: Debug Functions",
      "program": "${workspaceFolder}/node_modules/.bin/firebase",
      "args": [
        "functions:shell"
      ],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ”¥ Firebase: Emulators",
      "program": "${workspaceFolder}/node_modules/.bin/firebase",
      "args": [
        "emulators:start",
        "--inspect-functions"
      ],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ—ï¸ Build: Debug Build Process",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "build"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ” ESLint: Debug Current File",
      "program": "${workspaceFolder}/node_modules/eslint/bin/eslint.js",
      "args": [
        "${file}",
        "--fix"
      ],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "ğŸ”— Attach to Process",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "sourceMaps": true
    },
    {
      "name": "ğŸ¤– Debug with Copilot Insights",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/main.jsx",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/vite",
      "runtimeArgs": ["--host"],
      "serverReadyAction": {
        "pattern": "Local:.*http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "ğŸš€ Full Stack Debug",
      "configurations": [
        "ğŸš€ Vite: Start Dev Server",
        "ğŸŒ Chrome: Launch & Debug"
      ],
      "presentation": {
        "hidden": false,
        "group": "1_full",
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "ğŸ§ª Test Everything",
      "configurations": [
        "ğŸ§ª Vitest: Debug All Tests",
        "ğŸ­ Playwright: Debug All E2E Tests"
      ],
      "presentation": {
        "hidden": false,
        "group": "2_test",
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "ğŸ”¥ Firebase Full Stack",
      "configurations": [
        "ğŸ”¥ Firebase: Emulators",
        "ğŸŒ Chrome: Launch & Debug"
      ],
      "presentation": {
        "hidden": false,
        "group": "3_firebase",
        "order": 1
      },
      "stopAll": true
    }
  ]
}
