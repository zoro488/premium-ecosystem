{
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true
  },
  "github.copilot.chat.experimental.contextSelection": {
    "enabled": true,
    "maxFiles": 30,
    "maxLines": 50000,
    "includeOpenFiles": true,
    "includeRecentFiles": true,
    "includeRelevantFiles": true
  },
  "github.copilot.advanced": {
    "debug.overrideEngine": "gpt-4",
    "inlineSuggestCount": 3,
    "length": "auto"
  },
  "github.copilot.chat.terminalContext.enabled": true,
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.smoothScrolling": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  "workbench.list.smoothScrolling": false,
  "workbench.reduceMotion": "on",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": false,
    "strings": true
  },
  "editor.quickSuggestionsDelay": 10,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggest.preview": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggest.insertMode": "replace",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabCompletion": "on",
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.parameterHints.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/.cache/**": true,
    "**/coverage/**": true,
    "**/.vscode-test/**": true,
    "**/playwright-report/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/coverage": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.validate.enable": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.inlayHints.parameterNames.enabled": "all",
  "javascript.suggest.autoImports": true,
  "eslint.validate": ["javascript","javascriptreact","typescript","typescriptreact"],
  "eslint.lintTask.enable": true,
  "vitest.autoRun": false,
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 5000,
  "telemetry.telemetryLevel": "off",
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "update.mode": "manual",
  "search.followSymlinks": false,
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.location": "default",
  "workbench.editor.enablePreview": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.startupEditor": "none",
  "window.menuBarVisibility": "toggle",
  "window.restoreWindows": "none",
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": ["error","warning"],
  "errorLens.delay": 500,
  "todo-tree.general.tags": ["TODO","FIXME","BUG"],
  "todo-tree.highlights.enabled": true,
  "emmet.includeLanguages": {"javascript":"javascriptreact","typescript":"typescriptreact"},
  "emmet.triggerExpansionOnTab": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "githubPullRequests.defaultMergeMethod": "squash",
  "githubPullRequests.queries": [
    {
      "label": "Waiting For My Review",
      "query": "is:open review-requested:${user} repo:zoro488/chronos-system"
    },
    {
      "label": "Assigned To Me",
      "query": "is:open assignee:${user} repo:zoro488/chronos-system"
    },
    {
      "label": "Created By Me",
      "query": "is:open author:${user} repo:zoro488/chronos-system"
    },
    {
      "label": "All PRs",
      "query": "is:open repo:zoro488/chronos-system sort:updated-desc"
    }
  ],
  "githubIssues.queries": [
    {
      "label": "My Issues",
      "query": "is:open assignee:${user} repo:zoro488/chronos-system"
    },
    {
      "label": "Created Issues",
      "query": "is:open author:${user} repo:zoro488/chronos-system"
    },
    {
      "label": "Recent Issues",
      "query": "is:open repo:zoro488/chronos-system sort:updated-desc"
    },
    {
      "label": "Bugs",
      "query": "is:open label:bug repo:zoro488/chronos-system"
    },
    {
      "label": "Features",
      "query": "is:open label:enhancement repo:zoro488/chronos-system"
    }
  ],
  "github.gitProtocol": "https",
  "git.defaultCloneDirectory": "c:\\Users\\xpovo\\Documents",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.fetchOnPull": true,
  "git.pruneOnFetch": true,
  "git.branchProtection": ["main", "master", "develop"],
  "git.detectSubmodules": true,
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  }
}
