    "tw\\(.*?\\)`([^`]*)",
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["classnames\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "javascriptreact": "javascriptreact",
    "typescript": "typescript",
    "typescriptreact": "typescriptreact",
    "html": "html",
    "vue": "vue",
    "svelte": "svelte"
  },
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidScreen": "error",
  "tailwindCSS.lint.invalidVariant": "error",
  "tailwindCSS.lint.invalidConfigPath": "error",
  "tailwindCSS.lint.invalidTailwindDirective": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "warning",
  "tailwindCSS.showPixelEquivalents": true,
  "tailwindCSS.colorDecorators": true,

  // ========================================
  // üß™ TESTING - VITEST & PLAYWRIGHT
  // ========================================
  "vitest.enable": true,
  "vitest.commandLine": "npm run test",
  "vitest.include": ["**/*.{test,spec}.{js,ts,jsx,tsx}"],
  "vitest.exclude": ["**/node_modules/**", "**/dist/**"],
  "playwright.reuseBrowser": true,
  "playwright.showTrace": false,

  // ========================================
  // üìä IMPORT COST - BUNDLE ANALYSIS
  // ========================================
  "importCost.smallPackageSize": 50,
  "importCost.mediumPackageSize": 100,
  "importCost.largePackageSize": 200,
  "importCost.showCalculatingDecoration": true,
  "importCost.bundleSizeDecoration": "both",
  "importCost.typescriptExtensions": ["\\.tsx?$"],
  "importCost.javascriptExtensions": ["\\.jsx?$"],

  // ========================================
  // üö® ERROR LENS - INLINE ERRORS ENHANCED
  // ========================================
  "errorLens.followCursor": "allLines",
  "errorLens.followCursorMore": 5,
  "errorLens.gutterIconsEnabled": true,
  "errorLens.messageEnabled": true,
  "errorLens.statusBarIconsEnabled": true,
  "errorLens.statusBarMessageEnabled": true,

  // ========================================
  // üå≥ GIT - ADVANCED CONTROL
  // ========================================
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.autofetchPeriod": 180,
  "git.confirmSync": false,
  "git.suggestSmartCommit": true,
  "git.postCommitCommand": "none",
  "git.fetchOnPull": true,
  "git.pruneOnFetch": true,
  "git.rebaseWhenSync": false,
  "git.branchProtection": ["main", "master", "develop"],
  "git.branchProtectionPrompt": "alwaysPrompt",
  "git.decorations.enabled": true,
  "git.ignoreLimitWarning": true,
  "git.openRepositoryInParentFolders": "always",

  // ========================================
  // üéØ GITLENS - CODE LENS
  // ========================================
  "gitlens.codeLens.enabled": true,
  "gitlens.codeLens.authors.enabled": true,
  "gitlens.codeLens.recentChange.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": true,

  // ========================================
  // üìù EDITOR - ADVANCED DISPLAY
  // ========================================
  "editor.linkedEditing": true,
  "editor.renderWhitespace": "boundary",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 22,
  "editor.letterSpacing": 0.5,
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.unicodeHighlight.invisibleCharacters": true,
  "editor.accessibilitySupport": "auto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.hover.delay": 300,
  "editor.hover.enabled": true,
  "editor.hover.sticky": true,
  "editor.parameterHints.enabled": true,
  "editor.parameterHints.cycle": true,
  "editor.suggest.filterGraceful": true,
  "editor.suggest.localityBonus": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.showWords": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggest.matchOnWordStartOnly": false,

  // ========================================
  // üìÅ EXPLORER - ADVANCED NESTING
  // ========================================
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "explorer.autoReveal": true,

  // ========================================
  // üé® BETTER COMMENTS - CUSTOM TAGS
  // ========================================
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],

  // ========================================
  // üîß TELEMETRY - PRIVACY
  // ========================================
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "code-runner.enableAppInsights": false
}
