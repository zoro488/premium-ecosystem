    "*.jsx": "javascriptreact",
    ".firebaserc": "json",
    "firebase.json": "json"
  },

  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.vite": true,
    "**/coverage": true,
    "**/.firebase": false
  },

  // ========================================
  // SEARCH - PROJECT EXCLUSIONS
  // ========================================
