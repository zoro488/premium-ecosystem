    "package.json": "package-lock.json, .npmrc, .nvmrc",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.test.jsx, ${capture}.spec.jsx, ${capture}.module.css",
    "*.tsx": "${capture}.test.tsx, ${capture}.spec.tsx, ${capture}.module.css",
    "vite.config.*": "vite.config.*.timestamp-*",
    ".env": ".env.*, .env.local, .env.development, .env.production",
    "firebase.json": ".firebaserc, firestore.rules, firestore.indexes.json, storage.rules",
    "README.md": "LICENSE, CHANGELOG.md, CONTRIBUTING.md"
  },

