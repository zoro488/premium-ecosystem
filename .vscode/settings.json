  "terminal.integrated.env.windows": {
    "GITHUB_COPILOT_ENABLED": "true"
  },

  // ========================================
  // GIT - PROJECT SETTINGS
  // ========================================
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.autofetchPeriod": 180,
  "git.confirmSync": false,
