{
  "compilerOptions": {
    // Suppress deprecation warnings for baseUrl (will be removed in TS 7.0)
    "ignoreDeprecations": "5.0",

    // Language and Environment
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",

    // Module Resolution
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,

    // Emit
    "noEmit": true,
    "sourceMap": true,

    // Type Checking (OPTIMIZADO - strict mode activado)
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Path Aliases (sincronizado con vite.config.js)
    // baseUrl deprecated - usando paths directamente con rutas absolutas
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@apps/*": ["./src/apps/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@stores/*": ["./src/stores/*"],
      "@utils/*": ["./src/utils/*"],
      "@services/*": ["./src/services/*"],
      "@config/*": ["./src/config/*"],
      "@lib/*": ["./src/lib/*"],
      "@types/*": ["./src/types/*"],
      "@validation/*": ["./src/validation/*"],
      "@workers/*": ["./src/workers/*"],
      "@flowdistributor/*": ["./src/apps/FlowDistributor/*"],
      "@flowdistributor-shared/*": ["./src/apps/FlowDistributor/shared/*"],
      "@flowdistributor-components/*": ["src/apps/FlowDistributor/components/*"],
      "@flowdistributor-types/*": ["src/apps/FlowDistributor/types/*"],
      "@flowdistributor-services/*": ["src/apps/FlowDistributor/services/*"],
      "@flowdistributor-hooks/*": ["src/apps/FlowDistributor/hooks/*"]
    },

    // Type Roots
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],

    // Additional Options
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vite.config.js",
    "playwright.config.js"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".vscode",
    ".github",
    "coverage",
    ".archive-docs",
    "backups",
    ".backup-*",
    "test-results",
    "playwright-report",
    "logs",
    "output",
    "reports",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.md",
    "**/*.py",
    "**/*.bat",
    "**/*.sh",
    "**/*.ps1"
  ],

  "references": [{ "path": "./tsconfig.node.json" }]
}
